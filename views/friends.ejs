<main>
  <h2>친구 집 방문하기</h2>
  <div class="friends-list">
    <% friends.forEach(friend => { %>
      <div class="friend-item">
        <a href="/guestbook/friend/<%= friend.id %>">
          <img src="<%= friend.iconUrl %>" alt="<%= friend.name %>" class="friend-icon">
          <p><%= friend.name %>의 방</p>
        </a>
      </div>
    <% }) %>
  </div>
</main>

<style>
  .friends-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }
  .friend-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .friend-icon {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 10px;
    margin-left: 30px;
    margin-right: 30px;
  }
  .friend-item p {
    font-size: 1.2em;
    font-weight: bold;
  }
  h2 {
    text-align: center;
    margin-bottom: 20px;
  }
</style>
